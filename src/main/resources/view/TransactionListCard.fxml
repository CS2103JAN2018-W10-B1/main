<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS" hgap="20">
    <columnConstraints>
      <ColumnConstraints  minWidth="10" prefWidth="150" />
    </columnConstraints>
    <padding>
      <Insets top="5" right="5" bottom="5" left="15" />
    </padding>
    <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" minWidth="200">
      <Label fx:id="id" styleClass="cell_big_label">
        <minWidth>
          <!-- Ensures that the label text is never truncated -->
          <Region fx:constant="USE_PREF_SIZE" />
        </minWidth>
      </Label>
      <Label fx:id="payerName" text="\$first" styleClass="cell_big_label" />
    </HBox>
    <HBox alignment="CENTER_LEFT" minWidth="100" GridPane.columnIndex="1" >
      <Label fx:id="amount" styleClass="cell_small_label" text="\$amount" />
    </HBox>
    <HBox alignment="CENTER_LEFT" minWidth="200" GridPane.columnIndex="2" >
      <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
    </HBox>
    <HBox alignment="CENTER_LEFT" maxWidth="300" GridPane.columnIndex="3" >
      <FlowPane fx:id="payees" />
    </HBox>
  </GridPane>
</HBox>
